<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<!--
    Checkstyle suppressions for existing code in FinOps Service.
    These suppress pre-existing violations to allow incremental adoption.
    New code should comply with checkstyle.xml rules.
-->
<suppressions>
    <!-- Suppress logger naming convention (SLF4J convention uses lowercase 'logger') -->
    <suppress checks="ConstantName"
              files="MetricsService\.java|DevinApiService\.java|FinOpsWebSocketHandler\.java"/>

    <!-- Suppress utility class constructor warning for Spring Boot application class -->
    <suppress checks="HideUtilityClassConstructor"
              files="FinOpsApplication\.java"/>

    <!-- Suppress parameter count for data classes (constructor with many fields) -->
    <suppress checks="ParameterNumber"
              files="ConsumptionData\.java"/>

    <!-- Suppress method length for existing long methods -->
    <suppress checks="MethodLength"
              files="DevinApiService\.java"/>

    <!-- Suppress whitespace violations in existing lambda expressions -->
    <suppress checks="WhitespaceAround"
              files="DevinApiService\.java"/>
</suppressions>
