<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!--
        SpotBugs exclusion filter for FinOps Service.
        Add patterns here to suppress specific SpotBugs warnings.
    -->

    <!-- Exclude Lombok-generated code -->
    <Match>
        <Source name="~.*\.java"/>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>
    <Match>
        <Source name="~.*\.java"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- Exclude Spring Boot generated application class -->
    <Match>
        <Class name="com.devin.finops.FinOpsApplication"/>
    </Match>

    <!-- Exclude test classes -->
    <Match>
        <Class name="~.*Test"/>
    </Match>
    <Match>
        <Class name="~.*Tests"/>
    </Match>
</FindBugsFilter>
